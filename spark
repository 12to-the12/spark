#!/bin/sh
# run the following line to execute this script:
# curl --proto '=https' --tlsv1.2 -sSf https://raw.githubusercontent.com/12to-the12/spark/main/spark | sh

valid_entries="fedora debian mac"



echo "Welcome to Logan's world renowned computer configuration system!"

# trying to get mac, fedora or debian
if [[ $OSTYPE == 'linux-gnu' ]]; then
  os=linux
  platfom=$(cat /etc/os-release | grep "^ID=" | cut -d'=' -f2)
elif [[ $OSTYPE == 'darwin' ]]; then
  os=mac
  platform=mac
fi

echo $os
echo $platfom

# now, the desired configuration needs to be gathered
# these are not mutually exclusive
# options:
# - gui configuration
# - non task specific gui apps, web browser, obsidian, signal, etc
# - basic cli utilities, task viewers, text editors, etc
# - software dev tools
# - NVIDIA gpu specific libraries and tools
# - ASUS specific tools
# - media stack server
# - task related stuff, such as gaming or 3d workflow
#
# KISS

base_url="https://raw.githubusercontent.com/12to-the12/spark/main"
url=$base_url/prompt.sh
curl -o prompt.sh $URL
. ./prompt.sh


# sets up a gui operating system to my preferences
# - set icons
# - install critical extensions and apps
# - set gnome preferences if using gnome
if prompt_yes_no "configure gui?"; then
  echo installing
else 
  echo not installing
fi

if prompt_yes_no "install basic gui apps?"; then
  echo installing
else 
  echo not installing
fi

if prompt_yes_no "install cli utilities?"; then
  echo installing
else 
  echo not installing
fi
