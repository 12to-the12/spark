#!/bin/bash
prompt_yes_no(){
while true; do
  echo $1
  printf "(y/n)> "
  read yn

  case $yn in 
    yes ) return true;;
    y ) return 1;;
    no ) return false;;
    n ) return false;;
    '' ) return false;;
    * )
      echo " $yn is an invalid response"
      sleep 0.5;;
  esac
  
  done
}

set_install_flag(){
  flag_name=$1
  if [ prompt_yes_no "configure $1?" = true ]; then
    eval "$flag_name=\"true\""
  else
    eval "$flag_name=\"false\""
  fi
}
